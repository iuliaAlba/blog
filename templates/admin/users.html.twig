{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs
{% endblock %}

{% block body %}
<section id="hero" class="d-flex flex-column justify-content-center">
	<!-- ======= Services Section ======= -->
	<section id="services" class="services">
		<div class="container" data-aos="fade-up">

			<div class="section-title">
				<h2>Revue des troupes</h2>
			</div>

			<div
				class="row">
				{# On boucle sur les utilisateurs #}
				{% set delay = 100 %}
				{% for user in users %}
					{% if delay < 200 %}
						{% set delay = delay + 100 %}
					{% else %}
						{% set delay = 100 %}
					{% endif %}

                    {% if "ROLE_ADMIN" in user.roles %}
                        {% set roleIsup = "ROLE_ADMIN" %}
                    {% elseif "ROLE_EDITOR" in user.roles  %}
                        {% set roleIsup = "ROLE_EDITOR" %}
                    {% elseif "ROLE_USER" in user.roles %}
                        {% set roleIsup = "ROLE_USER" %}
                    {% endif %}
					<div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay={{delay}}>
						{% if roleIsup =='ROLE_ADMIN' %}

							<div class="icon-box iconbox-blue">
								<div class="icon">
									<svg width="6em" height="6em" viewbox="0 0 16 16" class="bi bi-person-bounding-box" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
										<path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.523-3.356c.329-.314.158-.888-.283-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767l-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288l1.847-3.658 1.846 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.564.564 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>									</svg>
									<i class="bi bi-person-square"></i>
								</div>
								<h4>
									<a href="{{ path('admin_modifier_utilisateur', {'id': user.id}) }}">{{ user.email }}</a>
								</h4>
								<p>
									<ul>

										{% for role in user.roles %}
											{% if role == "ROLE_USER" %}
												<li>Utilisateur</li>
											{% elseif role == "ROLE_EDITOR" %}
												<li>Editeur</li>
											{% elseif role == "ROLE_ADMIN" %}
												<li>Administrateur</li>
											{% endif %}
										{% endfor %}
									</ul>
								</p>
							</div>
                        {% elseif roleIsup =='ROLE_EDITOR'%}
                            <div class="icon-box iconbox-pink">
								<div class="icon">
									<svg width="6em" height="6em" viewbox="0 0 16 16" class="bi bi-person-bounding-box" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  									<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
									</svg>
									<i class="bi bi-person-square"></i>
								</div>
								<h4>
									<a href="{{ path('admin_modifier_utilisateur', {'id': user.id}) }}">{{ user.email }}</a>
								</h4>
								<p>
									<ul>

										{% for role in user.roles %}
											{% if role == "ROLE_USER" %}
												<li>Utilisateur</li>
											{% elseif role == "ROLE_EDITOR" %}
												<li>Editeur</li>
											{% elseif role == "ROLE_ADMIN" %}
												<li>Administrateur</li>
											{% endif %}
										{% endfor %}
									</ul>
								</p>
							</div>
                        {% elseif roleIsup =='ROLE_USER'%}
                            <div class="icon-box iconbox-red">
								<div class="icon">
									<svg width="6em" height="6em" viewbox="0 0 16 16" class="bi bi-person-bounding-box" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
										<path fill-rule="evenodd" d="M1.5 1a.5.5 0 0 0-.5.5v3a.5.5 0 0 1-1 0v-3A1.5 1.5 0 0 1 1.5 0h3a.5.5 0 0 1 0 1h-3zM11 .5a.5.5 0 0 1 .5-.5h3A1.5 1.5 0 0 1 16 1.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 1-.5-.5zM.5 11a.5.5 0 0 1 .5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 1 0 1h-3A1.5 1.5 0 0 1 0 14.5v-3a.5.5 0 0 1 .5-.5zm15 0a.5.5 0 0 1 .5.5v3a1.5 1.5 0 0 1-1.5 1.5h-3a.5.5 0 0 1 0-1h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 1 .5-.5z"/>
										<path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
									</svg>
									<i class="bi bi-person-square"></i>
								</div>
								<h4>
									<a href="{{ path('admin_modifier_utilisateur', {'id': user.id}) }}">{{ user.email }}</a>
								</h4>
								<p>
									<ul>

										{% for role in user.roles %}
											{% if role == "ROLE_USER" %}
												<li>Utilisateur</li>
											{% elseif role == "ROLE_EDITOR" %}
												<li>Editeur</li>
											{% elseif role == "ROLE_ADMIN" %}
												<li>Administrateur</li>
											{% endif %}
										{% endfor %}
									</ul>
								</p>
							</div>
						{% endif %}
					</div>

				{% else %}
					<p>Aucun utilisateur inscrit</p>
				{% endfor %}
			</div>


		</div>
	</section>
</section>

{% endblock %}
